" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Theory of cost and revenues:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Short and long run cost functions,  implicit and opportunity cost,  fixed and variable costs,  total average and marginal costs,  envelope curves,  marginal product and the least cost rule,  profit maximizing conditions.
" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Market: "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

